                <Setter TargetName="BorderRect"
                        Property="BorderThickness"
                        Value="{Binding Path=SystemPressedBorderThickness, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type wpfspark:SparkWindow}}}"></Setter>
                <Setter TargetName="BorderRect"
                        Property="Background"
